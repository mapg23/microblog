http {
   upstream app-hosts {
      least_conn;
      {% for host in groups['appservers_group'] %}
         server {{ host }}:5000;
      {% endfor %}

      {% if groups['appservers_group'] | length == 0 %}
         server 127.0.0.1:5000;  # fallback
      {% endif %}
   }

   access_log /var/log/nginx/access.log;
   error_log /var/log/nginx/error.log;


   server {
      listen 80;
      server_name  {{ domain_name }} www.{{ domain_name }};
      return 301 https://$server_name$request_uri;
   
      #location / {
      #   proxy_pass http://app-hosts;
      #}
   }
   server {
      listen 443 ssl;
      server_name  {{ domain_name }} www.{{ domain_name }};
      add_header Strict-Transport-Security "max-age=31536000; includeSubDomains";
      
      ssl_certificate /etc/letsencrypt/live/{{ domain_name }}/cert.pem;
      ssl_certificate_key /etc/letsencrypt/live/{{ domain_name }}/privkey.pem;
      ssl_protocols TLSv1 TLSv1.1 TLSv1.2;

      location / {
         proxy_pass http://app-hosts;
      }

      location /grafana/ {
         proxy_pass http://{{ groups['monitoring_group'][0] }}:3000/;
         proxy_set_header Host $host;
         proxy_set_header X-Real-IP $remote_addr;
         proxy_set_header X-Forwarded-Host $host;
         proxy_set_header X-Forwarded-Server $host;
         proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      }

      location /alertmanager/ {
         proxy_pass http://{{ groups['monitoring_group'][0] }}:9093/;
         proxy_set_header Host $host;
         proxy_set_header X-Real-IP $remote_addr;
         proxy_set_header X-Forwarded-Host $host;
         proxy_set_header X-Forwarded-Server $host;
         proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      }
   }

}
